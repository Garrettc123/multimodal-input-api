# Multimodal Input API Configuration

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Security
API_SECRET_KEY=your-secret-key-change-this
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_AUDIO_TYPES=mp3,wav,ogg,m4a
ALLOWED_VIDEO_TYPES=mp4,mov,avi,webm

# Processing
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=300

# Storage
STORAGE_PATH=./data/uploads
TEMP_PATH=./data/temp
